{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "palm",
  "name": "OpenAlex technical documentation",
  "colors": {
    "primary": "#10A37F",
    "light": "#10A37F",
    "dark": "#10A37F"
  },
  "appearance": {
    "default": "dark"
  },
  "background": {
    "dark": "#0D0D0D",
    "light": "#FAFAFA"
  },
  "styling": {
    "codeblocks": "dark"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "index",
              "quickstart",
              "guides/authentication",
              "guides/key-concepts"
            ]
          },
          {
            "group": "Working with the API",
            "pages": [
              "guides/resolve-ids",
              "guides/similar-works"
            ]
          },
          {
            "group": "For AI Agents",
            "pages": [
              "guides/deprecations"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Overview",
            "pages": [
              "api-reference/introduction",
              "api-reference/errors"
            ]
          }
        ]
      },
      {
        "tab": "Changelog",
        "groups": [
          {
            "group": "Changelog",
            "pages": [
              "changelog/overview"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "OpenAlex.org",
          "href": "https://openalex.org",
          "icon": "globe"
        },
        {
          "anchor": "GitHub",
          "href": "https://github.com/ourresearch/openalex-api-spec",
          "icon": "github"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Help",
        "href": "https://openalex.org/help"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Get API Key",
      "href": "https://openalex.org/settings/api"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/openalex_org",
      "github": "https://github.com/ourresearch"
    }
  }
}
