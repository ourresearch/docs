{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "palm",
  "name": "OpenAlex technical documentation",
  "colors": {
    "primary": "#10A37F",
    "light": "#10A37F",
    "dark": "#10A37F"
  },
  "appearance": {
    "default": "dark"
  },
  "background": {
    "dark": "#0D0D0D",
    "light": "#FAFAFA"
  },
  "styling": {
    "codeblocks": "dark"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Docs",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "index",
              "quickstart",
              "authentication"
            ]
          },
          {
            "group": "Core Operations",
            "pages": [
              "guides/get-single-entity",
              "guides/list-entities",
              "guides/discover-similar",
              "guides/download-data"
            ]
          },
          {
            "group": "Working with Data",
            "pages": [
              "guides/filtering",
              "guides/searching",
              "guides/sorting",
              "guides/paging",
              "guides/select-fields"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Overview",
            "pages": [
              "api-reference/overview",
              "api-reference/rate-limits"
            ]
          },
          {
            "group": "Entities",
            "pages": [
              "api-reference/entities/works",
              "api-reference/entities/authors",
              "api-reference/entities/sources",
              "api-reference/entities/institutions",
              "api-reference/entities/topics",
              "api-reference/entities/publishers",
              "api-reference/entities/funders",
              "api-reference/entities/awards"
            ]
          }
        ]
      },
      {
        "tab": "Download",
        "groups": [
          {
            "group": "Data Snapshot",
            "pages": [
              "download/overview",
              "download/snapshot-format",
              "download/openalex-cli",
              "download/load-to-database"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "OpenAlex.org",
          "href": "https://openalex.org",
          "icon": "globe"
        },
        {
          "anchor": "GitHub",
          "href": "https://github.com/ourresearch/openalex-api-spec",
          "icon": "github"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Help",
        "href": "https://openalex.org/help"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Get API Key",
      "href": "https://openalex.org/settings/api"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/openalex_org",
      "github": "https://github.com/ourresearch"
    }
  }
}
