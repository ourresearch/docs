{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "palm",
  "name": "OpenAlex technical documentation",
  "colors": {
    "primary": "#10A37F",
    "light": "#10A37F",
    "dark": "#10A37F"
  },
  "appearance": {
    "default": "dark"
  },
  "background": {
    "dark": "#0D0D0D",
    "light": "#FAFAFA"
  },
  "styling": {
    "codeblocks": "dark"
  },
  "favicon": "/favicon.svg",
  "api": {
    "openapi": "api-reference/openapi.json",
    "playground": {
      "display": "interactive"
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "index",
              "quickstart",
              "guides/authentication",
              "guides/key-concepts"
            ]
          },
          {
            "group": "Working with the API",
            "pages": [
              "guides/resolve-ids",
              "guides/similar-works"
            ]
          },
          {
            "group": "For AI Agents",
            "pages": [
              "guides/llm-quick-reference",
              "guides/deprecations"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Overview",
            "pages": [
              "api-reference/introduction",
              "api-reference/errors"
            ]
          },
          {
            "group": "Entities",
            "openapi": "api-reference/openapi.json",
            "pages": [
              {
                "group": "Works",
                "pages": [
                  "GET /works",
